{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",

		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020"],

		"moduleResolution": "node",
		"types": ["node", "express"],

		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,

		"sourceMap": true,
		"declaration": false,

		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
